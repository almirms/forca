<p>
  palavra: <%= @tally.letters |> Enum.join(" ") %>
</p>
<p>
  letras usadas: <%= @tally.letters_used %>
</p>

<%= if game_over?(@tally) do %>
  <%= new_game_button(@conn) %>
  <script>
    document.getElementById("novo_jogo").focus();
  </script>    
<% else %>
  <%= form_for(@conn, hangman_path(@conn, :make_move), [ as: :make_move, method: :put ], fn f -> %>
    <%= text_input(f, :guess) %>
    <%= submit("dÃ¡ um chute!") %>
    <script>
      document.getElementById("make_move_guess").focus();
    </script>
  <% end) %>
<% end %>
